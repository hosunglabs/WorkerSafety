<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">

        <TextView

            android:id="@+id/assistant_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ë¹„"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/testtestest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_card_view_img"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon0" />

            <TextView
                android:id="@+id/book_card_view_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="Hosung, Get out here!!"
                android:textSize="20dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/book_card_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/testtestest"
            android:layout_marginRight="20dp"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>