<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_list_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#e2e2e2"
        android:src="@drawable/ic_person_white_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/chat_list_date"
        android:layout_toRightOf="@id/chat_list_profile"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/chat_list_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안전 관리자"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/chat_list_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="오늘 날씨가 안좋네요." />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="8월 11일"
        android:textSize="10sp" />

</RelativeLayout>